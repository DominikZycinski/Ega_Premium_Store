<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/orange">

    <Button
        android:id="@+id/bKategorie"

        android:layout_width="354dp"
        android:layout_height="45dp"

        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Kategorie"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLogowanie" />

    <TextView
        android:id="@+id/tvLogowanie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Logowanie"
        android:textColor="@color/black2"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="3dp" />

    <ImageButton
        android:id="@+id/ibLogowanie"
        android:layout_width="30dp"
        android:layout_height="34dp"
        android:layout_marginBottom="79dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bKategorie"
        app:layout_constraintEnd_toStartOf="@+id/tvLogowanie"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_partial_secure" />


    <TextView
        android:id="@+id/tvNajpopularniejsze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="Najpopularniejsze kategorie"
        android:textColor="@color/white"
        android:textSize="9pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bKategorie"
        android:layout_marginRight="61dp"
        android:layout_marginLeft="62dp" />


    <ImageButton
        android:id="@+id/ibElektroLogo"
        android:layout_width="120dp"
        android:layout_height="132dp"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/elektronarzedzialogo" />

    <ImageButton
        android:id="@+id/ibBudowlaneLogo"
        android:layout_width="121dp"
        android:layout_height="134dp"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibOgrodoweLogo"
        app:layout_constraintStart_toEndOf="@+id/ibElektroLogo"
        app:srcCompat="@drawable/budowlanelogo" />

    <ImageButton
        android:id="@+id/ibOgrodoweLogo"
        android:layout_width="122dp"
        android:layout_height="139dp"
        android:layout_marginBottom="196dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibBudowlaneLogo"
        app:srcCompat="@drawable/ogrodowelogo"
        android:layout_marginRight="117dp" />

    <TextView
        android:id="@+id/tvElektronarzedzia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Elektronarzędzia"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/tvBudowlane"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibElektroLogo"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="26dp" />

    <TextView
        android:id="@+id/tvBudowlane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Budowlane"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/tvOgrodowe"
        app:layout_constraintStart_toEndOf="@+id/tvElektronarzedzia"
        app:layout_constraintTop_toBottomOf="@+id/ibBudowlaneLogo"
        android:layout_marginRight="52dp"
        android:layout_marginLeft="26dp" />

    <TextView
        android:id="@+id/tvOgrodowe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:text="Ogrodowe"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibOgrodoweLogo" />

    <ImageView
        android:id="@+id/ivMotoryzacja"
        android:layout_width="wrap_content"
        android:layout_height="134dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/ivKlucze"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvElektronarzedzia"
        app:srcCompat="@drawable/motoryzacjalogo"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="5dp" />

    <ImageView
        android:id="@+id/ivKlucze"
        android:layout_width="114dp"
        android:layout_height="135dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/ivWkretaki"
        app:layout_constraintStart_toEndOf="@+id/ivMotoryzacja"
        app:layout_constraintTop_toBottomOf="@+id/tvBudowlane"
        app:srcCompat="@drawable/kluczelogo"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:id="@+id/ivWkretaki"
        android:layout_width="116dp"
        android:layout_height="137dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivKlucze"
        app:layout_constraintTop_toBottomOf="@+id/tvOgrodowe"
        app:srcCompat="@drawable/wkretakilogo"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="3dp" />

    <TextView
        android:id="@+id/tvMotoryzacja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Motoryzacja"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMotoryzacja"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tvKlucze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Klucze"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/tvWkreatki"
        app:layout_constraintStart_toEndOf="@+id/tvMotoryzacja"
        app:layout_constraintTop_toBottomOf="@+id/ivKlucze"
        android:layout_marginLeft="67dp"
        android:layout_marginRight="66dp" />

    <TextView
        android:id="@+id/tvWkreatki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Wkrętaki"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivWkretaki"
        android:layout_marginRight="36dp" />//>


</android.support.constraint.ConstraintLayout>